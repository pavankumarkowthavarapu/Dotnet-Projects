@model ProductInventory.Models.Product

<h1>Edit Product Details</h1>
<form method="post">
    <div class="mb-3">
        <label class="form-label">Id</label>
        <input type="text" class="form-control" asp-for="Id" readonly>

    </div>

    <div class="mb-3">
        <label class="form-label">Name</label>
        <input type="text" class="form-control" asp-for="Name" readonly>

    </div>
    <div class="mb-3">
        <label class="form-label">Price</label>
        <input type="number" class="form-control" asp-for="Price" readonly>
    </div>

    <div class="mb-3">
        <label class="form-label">Quantity</label>
        <input type="number" class="form-control" asp-for="Quantity" readonly>
    </div>

    <div class="mb-3">
        <label class="form-label">Category</label>
        <input type="text" class="form-control" asp-for="Category" readonly>
    </div>

    <div class="mb-3">
    <!-- Show existing image -->
    @if (!string.IsNullOrEmpty(Model.ImageUrl))
    {
        <img src="/@Model.ImageUrl" class="img-fluid border rounded shadow"
             style="max-height: 300px; object-fit: contain;" />
    }
    </div>



    <button type="submit" class="btn btn-danger">Delete</button>
    <a class="btn btn-secondary" asp-controller="Product" asp-action="Index">Cancel</a>
</form>