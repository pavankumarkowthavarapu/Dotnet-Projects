@model ProductInventory.Models.Product

<h1>Edit Product Details</h1>
<form method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label class="form-label">Id</label>
        <input type="text" class="form-control" asp-for="Id" readonly>

    </div>

    <div class="mb-3">
        <label class="form-label">Name</label>
        <input type="text" class="form-control" asp-for="Name">

    </div>
    <div class="mb-3">
        <label class="form-label">Price</label>
        <input type="number" class="form-control" asp-for="Price">
    </div>

    <div class="mb-3">
        <label class="form-label">Quantity</label>
        <input type="number" class="form-control" asp-for="Quantity">
    </div>

    <div class="mb-3">
        <label class="form-label">Category</label>
        <input type="text" class="form-control" asp-for="Category">
    </div>

    <!-- Show existing image -->
    @if (!string.IsNullOrEmpty(Model.ImageUrl))
    {
        <img src="/@Model.ImageUrl" class="img-fluid border rounded shadow"
             style="max-height: 300px; object-fit: contain;" />
    }

    <div class="mb-3">
        <label asp-for="ProductImage" class="form-label">Upload New Image</label>
        <input asp-for="ProductImage" type="file" class="form-control" />
        <span asp-validation-for="ProductImage" class="text-danger"></span>

        
    </div>

    <button type="submit" class="btn btn-success">Update</button>
    <a class="btn btn-danger" asp-controller="Product" asp-action="Index">Cancel</a>
</form> 