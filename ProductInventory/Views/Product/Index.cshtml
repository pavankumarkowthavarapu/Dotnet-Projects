                        <a class="btn btn-sm btn-view" asp-controller="Product" asp-action="Details" asp-route-id="@product.Id"><i class="bi bi-eye"></i>View</a>

                        <a class="btn btn-sm btn-edit" asp-controller="Product" asp-action="Edit" asp-route-id="@product.Id"><i class="bi bi-pencil"></i>Edit</a>

                        <a class="btn btn-sm btn-delete" asp-controller="Product" asp-action="Delete" asp-route-id="@product.Id"><i class="bi bi-trash"></i>Delete</a>


