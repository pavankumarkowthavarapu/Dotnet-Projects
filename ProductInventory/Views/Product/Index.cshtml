    <div class="d-flex justify-content-end mb-4">
        <a asp-action="Create" asp-controller="Product" class="btn btn-success btn-lg shadow-sm">
            <i class="bi bi-plus-lg me-2"></i> Create Product
        </a>
    </div>


    <!-- Product Grid -->
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-3 g-4">
        @foreach (var product in Model)
        {
            <div class="col">
                <div class="card h-100">
                    <div class="image-container">
                        <img src="@product.ImageUrl" alt="@product.Name" />
                    </div>
                    @* <img src="@product.ImageUrl" class="card-img-top" alt="@product.Name" style="width:300px;height: 200px; object-fit: cover;"> *@
                    <div class="card-body">
                        <h5 class="card-title">@product.Name</h5>
                        <p class="card-text text-muted">Price: $@product.Price</p>
                    </div>
                    <div class="card-footer d-flex justify-content-between">

                       @*  <a class="btn btn-sm btn-outline-secondary" asp-controller="Product" asp-action="Details" asp-route-id="@product.Id">View</a>

