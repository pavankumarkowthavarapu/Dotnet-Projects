@model ProductInventory.Models.Product

<h1>Add Product</h1>
<form method="post" enctype="multipart/form-data">
    <div class="mb-3">
        <label  class="form-label">Name</label>
        <input type="text" class="form-control" asp-for="Name" >
        <span asp-validation-for="Name" class="text-danger"></span>
      
    </div>



    <div class="mb-3">
        <label  class="form-label">Price</label>
        <input type="text" class="form-control" asp-for="Price" >
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Quantity</label>
        <input type="text" class="form-control" asp-for="Quantity">
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>


   



    <div class="mb-3">
        <label class="form-label">Category</label>
        <input type="text" class="form-control" asp-for="Category">
        <span asp-validation-for="Category" class="text-danger"></span>
    </div>

    <div class="mb-3">
           <label class="form-label">ProductImage</label><br/>
             <input asp-for="ProductImage" class="custom-file-Input" id="CustomFile">

            <span asp-validation-for="ProductImage" class="text-danger"></span>
    </div>

  


   


    <button type="submit" class="btn btn-success">Save</button>   
    <a class="btn btn-danger" asp-controller="Product" asp-action="Index">Cancel</a>
</form>

